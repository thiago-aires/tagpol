<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#b2ebf2"
    android:id="@+id/cv_deputado">

    <!-- card 1 #b2ebf2  card 2 #4dd0e1 card 3 #006064  -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgDeputado"
            android:src="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nomeDeputado"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:textSize="21dp"
            android:typeface="sans"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_below="@id/imgDeputado"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/partidoDeputado"
            android:textSize="14dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:layout_alignParentTop="true"
            android:textColor="#757575"
            android:textAllCaps="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>